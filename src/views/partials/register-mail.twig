<section id="register-mail" class="page page-register-mail" data-toggle="block-page" data-active="false">
	<div class="page-container">
		<div class="page-wrapper">
			<div class="card card-primary card-purple">
				<div class="progressive">
					<div class="progressive-circle" style="left: 0%">OFF</div>
				</div>
				<div class="card-header-register-mail">
					<img src="{{ imageMulti('icons/gift.png') }}" alt="Icono regalo">
					<h1>¡Para recibir <br> sorpresas <span>extra!</span></h1>
				</div>
				<div class="card-body-register-mail">
					<form id="form-register-mail">
						<fieldset class="form-group mb-group">
							<label for="form-register-mail-phone" class="form-label form-label-light">Déjanos tu número de teléfono</label>
							<div class="form-phone">
								<input
									id="form-register-mail-country-phone"
									type="hidden"
									name="ct"
									data-toggle="state-modifier"
									data-handler="on-update"
									value=""
								>
								{% include "components/field-phone.twig" %}
								<div class="form-phone-field">
									<input
										id="form-register-mail-phone"
										type="text"
										data-type="number"
										name="pn"
										data-toggle="state-modifier"
										data-handler="on-number"
										class="form-field form-field-outline-phone form-field-left"
										maxlength="10"
										autocomplete="off"
										placeholder="Ingresa tu Número de celular"
									>
								</div>
							</div>
							<span class="form-error"></span>
						</fieldset>
						<fieldset class="form-group mb-group">
							<div class="form-checkbox form-checkbox-white">
								<input
									id="form-register-mail-terms"
									type="checkbox"
									name="ot"
									data-toggle="state-modifier"
									data-handler="on-check"
								>
								<label for="form-register-mail-terms">Aceptas <a href="{{ page('terminos-y-condiciones') }}" target="_blank">Términos y condiciones, políticas de privacidad.</a></label>
							</div>
							<span class="form-error"></span>
						</fieldset>
						<fieldset class="form-group mb-group">
							<div class="form-checkbox form-checkbox-white">
								<input
									id="form-register-mail-promotions"
									type="checkbox"
									name="op"
									data-toggle="state-modifier"
									data-handler="on-check"
								>
								<label for="form-register-mail-promotions">Recibir descuentos, promociones, muestras, novedades y contenido de los productos.</label>
							</div>
						</fieldset>
						<button id="btn-step1a" type="submit" class="button button-secondary button-tab-purple-800" data-toggle="button-step">
							Guardar y Continuar <span class="icon icon-arrow-right text-size-xl ml-1"></span>
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
